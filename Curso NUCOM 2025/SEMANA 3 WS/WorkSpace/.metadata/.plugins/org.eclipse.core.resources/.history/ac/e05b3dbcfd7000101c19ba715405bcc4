package com.mx.RolService.Service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Sort;
import org.springframework.stereotype.Service;

import com.mx.RolService.Dominio.Rol;
import com.mx.RolService.Repository.IRolRepository;

@Service
public class IRolServiceImp implements IMetodos<Rol> {

	
	
	@Autowired
	private IRolRepository repo;
	
	
	@Override
	public Rol guardar(Rol r) {
		// TODO Auto-generated method stub
		return repo.save(r);
	}

	@Override
	public void editar(Rol entidad) {
		repo.save(entidad);
		
	}

	@Override
	public void eliminar(Rol entidad) {
		repo.delete(entidad);
		
	}

	@Override
	public List<Rol> listar() {
		// TODO Auto-generated method stub
		return repo.findAll(Sort.by(Sort.Direction.ASC,"idRol"));
	}

	@Override
	public Rol buscar(Rol entidad) {
		// TODO Auto-generated method stub
		return null;
	}

}
