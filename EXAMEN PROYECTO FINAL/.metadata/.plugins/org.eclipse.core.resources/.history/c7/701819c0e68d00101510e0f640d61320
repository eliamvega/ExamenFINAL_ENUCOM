package com.mx.Cliente.Service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Sort;
import org.springframework.stereotype.Service;

import com.mx.Cliente.Dominio.Cliente;
import com.mx.Cliente.Repository.IClienteRepository;

@Service
public class IClienteServiceImp implements IMetodos<Cliente> {

	
	@Autowired
	private IClienteRepository repo;
	
	
	
	
	@Override
	public Cliente guardar(Cliente c) {
		return repo.save(c);
	}

	@Override
	public void editar(Cliente entidad) {
		 repo.save(entidad);
		
	}

	@Override
	public void eliminar(Cliente entidad) {
		repo.delete(entidad);
		
	}

	@Override
	public List<Cliente> listar() {
		// TODO Auto-generated method stub
		return repo.findAll(Sort.by(Sort.Direction.ASC,"idCliente"));
	}

	@Override
	public Cliente buscar(Cliente entidad) {
	if (entidad.getIdCliente() != null) {
		return repo.findById(entidad.getIdCliente()).orElse(null);
	}
	return null;
	}

	
	//paso 0.1
	
	public List <Cliente> buscarVeterinaria(int veterinariaId){
		return repo.findByVeterinariaId(veterinariaId);
	}
}
